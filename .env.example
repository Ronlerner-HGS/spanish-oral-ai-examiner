# Groq API Key for LLM and Whisper transcription
GROQ_API_KEY=your_groq_api_key_here

# Inworld API Key for Text-to-Speech (Base64 encoded)
# Get your API key from: https://platform.inworld.ai/ -> Settings -> API Keys
INWORLD_API_KEY=your_inworld_base64_api_key_here

# Optional: Custom Inworld voice ID (defaults to Ashley)
# Available voices: Ashley, Dennis, and many more - see https://docs.inworld.ai/docs/tts/tts-voices
# INWORLD_VOICE_ID=Ashley

# Server port (defaults to 3000)
# PORT=3000
